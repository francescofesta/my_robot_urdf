<?xml version="1.0"?>

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="pi" value="3.1415" />
    <xacro:property name="radius_wheel" value="0.04"/>
    <xacro:property name="radius_caster" value="0.025"/>
    <xacro:property name="length" value="0.02"/>
    <xacro:property name="wheel_mass" value="2.5" /> <!-- in kg-->
    <xacro:property name="base_x_origin_to_caster_front_origin" value="0.115"/>
    <xacro:property name="base_z_origin_to_caster_front" value="0.007"/>
    <xacro:property name="base_x_origin_to_caster_back_origin" value="-0.135"/>
    <xacro:property name="base_z_origin_to_caster_back" value="0.009"/>
    
    <xacro:property name="base_y_origin_to_wheel_origin" value="0.15"/>
    

    <xacro:macro name="cylinder_inertia" params="m r h">
        <inertial>
            <mass value="${m}"/>
            <origin xyz="0 0 0" />
            <inertia ixx="${m*(3*r*r+h*h)/12}" ixy = "0" ixz = "0"
              iyy="${m*(3*r*r+h*h)/12}" iyz = "0"
              izz="${m*r*r/2}" />
        </inertial>
    </xacro:macro>

    <xacro:macro name="caster_inertia" params="m r">
        <inertial>
            <mass value="${m}"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="${(2*m*r*r)/5}" ixy="0" ixz="0"
                iyy="${(2*m*r*r)/5}" iyz="0"
                izz="${(2*m*r*r)/5}" />
              
        </inertial>
    </xacro:macro>

    <xacro:macro name="cylinder_wheel" params="lr parent translateX translateY flipY"> <!--fb : front, back ; lr: left, right -->
         <link name="${lr}_wheel">
      <visual>
        <origin xyz="0 0 0" rpy="${flipY*pi/2} 0  0 " /> 
        <geometry>
          <cylinder length="${length}" radius="${radius_wheel}" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${flipY*pi/2} 0 0 " />
        <geometry>
          <cylinder length="${length}" radius="${radius_wheel}" />
        </geometry>
      </collision>
      <cylinder_inertia m="${wheel_mass}" r="${radius_wheel}" h="${length}" />
    </link>

    <gazebo reference="${lr}_wheel">
      <mu1 value="1.0"/>
      <mu2 value="1.0"/>
      <kp value="10000000.0"/>
      <kd value="1.0"/>
      <fdir1 value="1.0"/>
      <turnGravityOff>false</turnGravityOff>
    </gazebo>

    <joint name="${lr}_wheel_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${lr}_wheel"/>
      <origin xyz="0 ${translateY*base_y_origin_to_wheel_origin} 0" rpy="0 0 0"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="100" velocity="100"/>
      <joint_properties damping="0.0" friction="0.0"/>
    
    </joint>
      
    </xacro:macro>

    <xacro:macro name="caster_wheel" params= "fb parent translateX">   <!--translateX=0 per front translateX=1 per back-->
        <link name="caster_${fb}_wheel">
            <visual>
                <origin xyz="${translateX*0.02}  0.02 0" rpy="1.57 0 0"/>
                <geometry>
                    <sphere radius="${radius_caster}"/>   
                </geometry>
            </visual>
            <collision>
                <origin xyz="${translateX*0.02}  0.02 0" rpy="1.57 0 0"/>
                <geometry>
                    <sphere radius="${radius_caster}"/>
                </geometry>
            </collision>
            <caster_inertia m="${wheel_mass}" r="${radius_caster}"/>
        </link>

        <joint name="caster_${fb}_joint" type="continuous">
            <parent link="${parent}"/>
            <child link="caster_${fb}_wheel"/>
            <origin xyz="${base_x_origin_to_caster_${fb}_origin} 0 ${base_z_origin_to_caster_${fb}}" rpy="-1.57 0 0"/>
        </joint>

        <gazebo reference="caster_${fb}_wheel">
            <mu1 value="1.0"/>
            <mu2 value="1.0"/>
            <kp  value="10000000.0" />
            <kd  value="1.0" />
            <fdir1 value="1 0 0"/>
            <turnGravityOff>false</turnGravityOff>
        </gazebo>
    </xacro:macro>

    <link name="base_link">
        <visual>
        <geometry>
            <cylinder length="0.15" radius="0.02"/>
        </geometry>
        <origin rpy= "0 0 0" xyz= "0 0 0" />
        </visual>
        <cylinder_inertia m="5" r="0.02" h="0.15" />
    </link>

    <gazebo reference="base_link">
        <mu1 value="1.0"/>
        <mu2 value="1.0"/>
        <kp  value="10000000.0" />
        <kd  value="1.0" />
        <fdir1 value="1 0 0"/>
        <turnGravityOff>false</turnGravityOff>
    </gazebo>

    <cylinder_wheel  lr="left" parent="base_link" translateX="0" translateY="0.5" flipY="1" />
    <cylinder_wheel  lr="right" parent="base_link" translateX="0" translateY="-0.5" flipY="1" />

    <caster_wheel fb="front" parent="base_link" translateX="0" />
    <caster_wheel fb="front" parent="base_link" translateX="1" />




</robot>