<?xml version="1.0"?>

<robot name="my_robot">

    <xacro:property name="pi" value="3.1415" />
    <xacro:property name="radius_wheel" value="0.04"/>
    <xacro:property name="radius_caster" value="0.025"/>
    <xacro:property name="length" value="0.02"/>
    <xacro:property name="wheel_mass" value="2.5" /> <!-- in kg-->
    <xacro:property name="base_y_origin_to_wheel_origin" value="0.15"/>
    

    <xacro:macro name="cylinder_inertia" params="m r h">
        <inertial>
            <mass value="${m}"/>
            <origin xyz="0 0 0" />
            <inertia ixx="${m*(3*r*r+h*h)/12}" ixy = "0" ixz = "0"
              iyy="${m*(3*r*r+h*h)/12}" iyz = "0"
              izz="${m*r*r/2}" />
        </inertial>
    </xacro:macro>

    <xacro:macro name="cylinder_wheel" params="fb lr parent translateX translateY flipY"> <!--fb : front, back ; lr: left, right -->
         <link name="${lr}_wheel">
      <visual>
        <origin xyz="0 0 0" rpy="${flipY*pi/2} 0  0 " /> 
        <geometry>
          <cylinder length="${length}" radius="${radius_wheel}" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${flipY*pi/2} 0 0 " />
        <geometry>
          <cylinder length="${length}" radius="${radius_wheel}" />
        </geometry>
      </collision>
      <cylinder_inertia m="${wheel_mass}" r="${radius_wheel}" h="${length}" />
    </link>
    <gazebo reference="${lr}_wheel">
      <mu1 value="1.0"/>
      <mu2 value="1.0"/>
      <kp value="10000000.0"/>
      <kd value="1.0"/>
      <fdir1 value="1.0"/>Gra
      <material>Gazebo/grey</material>
      <turnGravityOff>false</turnGravityOff>
    </gazebo>
    <joint name="${lr}_wheel_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${lr}_wheel"/>
      <origin xyz="0 ${translateY*base_y_to_origin_to_wheel_origin} 0}" rpy="0 0 0"/>
      <axis xyz="0 1 0" rpy="0 0"/>
      <limit effort="100" velocity="100"/>
      <joint_properties damping="0.0" friction="0.0"/>
    
    </joint>
      
    </xacro:macro>

    <xacro:macro name="caster_wheel" params= "fb parent translateX translateY">
        <link name="${fb}_wheel">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <sphere radius="${radius_caster}"/>
                    
                </geometry>
            </visual>
        </link>
    </xacro:macro>
</robot>